{
  "name": "multimonitor-digital-rain",
  "version": "1.1.0",
  "description": "Matrix-style digital rain effect for multiple monitors",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "dist": "electron-builder",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "build": {
    "appId": "com.techtrainertim.digitalrain",
    "productName": "Digital Rain",
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "spectron": "^19.0.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@types/jest": "^29.5.11"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "*.js",
      "!dist/**",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
